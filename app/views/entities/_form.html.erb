<%= simple_form_for(@entity) do |f| %>
  <%= f.error_notification %>


     <div class="form-inputs">
    <%= f.input :name, input_html: { class: 'form-control'} %>
  	 </div>
     <div class="form-inputs">
    <%= f.input :tfn, input_html: { class: 'form-control'} %>
  	 </div>
     <div class="form-inputs">
    <%= f.input :abn, input_html: { class: 'form-control'} %>
  	 </div>
     <div class="form-inputs">
    <%= f.input :address, input_html: { class: 'form-control'} %>
  	 </div>
     <div class="form-inputs">
    <%= f.input :phone_number, input_html: { class: 'form-control'} %>
  	 </div>

  <div class="form-actions">
    <%= f.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
